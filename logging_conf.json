{
  "version": 1,
  "formatters": {
    "default": {
      "format": "%(asctime)s - %(name)s:%(funcName)s:%(lineno)d - %(levelname)s - %(message)s"
    },
    "loader_fmt": {
      "format": "%(asctime)s - %(cluster)s:%(funcName)s:%(lineno)d - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "default": {
      "class": "logging.StreamHandler",
      "formatter": "default",
      "level": "DEBUG",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "src.utils.log_handlers.RotatingFileHandler",
      "formatter": "default",
      "maxBytes": 512000,
      "backupCount": 3,
      "filename": "./logs/file.log"
    },
    "loader_file": {
      "class": "src.utils.log_handlers.RotatingFileHandler",
      "formatter": "loader_fmt",
      "maxBytes": 10240000,
      "backupCount": 10,
      "filename": "./logs/loader.log"
    }
  },
  "loggers": {
    "__main__": {
      "level": "DEBUG",
      "handlers": [
        "file"
      ]
    },
    "src.processor.0": {
      "level": "INFO"
    },
    "src.processor.1": {
      "level": "INFO"
    },
    "src.processor.2": {
      "level": "INFO"
    },
    "src.processor.3": {
      "level": "INFO"
    },
    "src.processor.4": {
      "level": "INFO"
    },
    "src.processor.5": {
      "level": "INFO"
    },
    "LoadClusterTask": {
      "level": "INFO",
      "handlers": [
        "loader_file"
      ]
    }
  }
}
